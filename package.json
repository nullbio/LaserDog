{
  "name": "laser-dog",
  "version": "0.1.0",
  "description": "AI-powered todo list and note taking app",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "start:prod": "npm run build:react && electron .",
    "dev": "concurrently \"webpack --watch\" \"electron . --dev\"",
    "build:react": "webpack --mode production",
    "build": "npm run build:react",
    "build:win": "npm run build:react && electron-builder --win --config electron-builder-win.json",
    "package": "npm run build:react && node package-app.js",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yourusername/LaserDog.git"
  },
  "keywords": [
    "todo",
    "notes",
    "ai",
    "electron"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.22.5",
    "@babel/preset-env": "^7.22.5",
    "@babel/preset-react": "^7.22.5",
    "archiver": "^5.3.1",
    "autoprefixer": "^10.4.14",
    "babel-loader": "^9.1.2",
    "concurrently": "^8.2.0",
    "copy-webpack-plugin": "^11.0.0",
    "css-loader": "^6.8.1",
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "html-webpack-plugin": "^5.5.3",
    "jest": "^29.7.0",
    "postcss": "^8.4.24",
    "postcss-loader": "^7.3.3",
    "style-loader": "^3.3.3",
    "tailwindcss": "^3.3.5",
    "webpack": "^5.88.1",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-beautiful-dnd": "^13.1.1",
    "electron-store": "^8.1.0",
    "openai": "^4.20.1",
    "uuid": "^9.0.1"
  },
  "build": {
    "appId": "com.laserdog.app",
    "productName": "LaserDog",
    "files": [
      "build/**/*",
      "main.js",
      "preload.js",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "assets",
      "output": "dist"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true
    }
  }
}
